sudo apt update
sudo apt install qemu qemu-kvm libvirt-bin bridge-utils virtinst


sudo adduser $USER libvirt
su - ${USER}

sudo add-apt-repository universe
sudo apt update
sudo apt install python-paramiko python-pil novnc python-libvirt python-ethtool python-ipaddr python-guestfs libguestfs-tools spice-html5 python-magic keyutils libnfsidmap2 libtirpc1 nfs-common rpcbind python-configobj python-parted -y

sudo apt install nginx -y

wget https://github.com/kimchi-project/kimchi/releases/download/2.5.0/wok-2.5.0-0.noarch.deb
sudo apt install -y ./wok-2.5.0-0.noarch.deb

wget http://kimchi-project.github.io/gingerbase/downloads/latest/ginger-base.noarch.deb
sudo apt install -y ./ginger-base.noarch.deb

wget http://kimchi-project.github.io/ginger/downloads/latest/ginger.noarch.deb
